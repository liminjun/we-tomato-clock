@import 'style/weui.wxss';

.hide {
  display: none!important;
}

.container,
input,
button {
  font: 14px "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", Arial, sans-serif;
}

.container {
  height: 100%;
  background-color: #f5f5f5;
}

.panel {
  background: #fff;
  border-radius: 3px;
  padding: 5px 10px;
}
.nodata{
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100%;
}

.nodata_img{
	display: block;
	width: 100px;
	height: 100px;
	margin-top: 50%;
	top:-50px;
}

.nodata_text{
	color:#dedede;
	font-size: 12px;
	padding-left: 10px;
}
button{
	padding: 10px 0;
}


.page__hd {
    padding: 0px;
}

.page__bd {
    padding-bottom: 40px;
}

.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft {
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    font-size: 20px;
    font-weight: 400;
    text-align: center;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: center;
    font-size: 14px;
}
.index-profile__img {
    border-radius: 50%;
    width: 200rpx;
    height: 200rpx;
    margin: 0 auto;
    background-repeat: no-repeat;
    background-size: contain;
}